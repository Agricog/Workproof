:8080 {
	# Proxy API requests to Hono server
	handle /api/* {
		reverse_proxy localhost:3001
	}

	# Proxy webhook requests to Hono server
	handle /webhooks/* {
		reverse_proxy localhost:3001
	}

	# Serve static files from dist folder
	handle {
		root * /app/dist
		file_server
		try_files {path} /index.html
	}

	# Security Headers - OWASP Compliant
	header {
		# Prevent clickjacking
		X-Frame-Options "DENY"
		
		# Prevent MIME type sniffing
		X-Content-Type-Options "nosniff"
		
		# XSS Protection (legacy browsers)
		X-XSS-Protection "1; mode=block"
		
		# Referrer Policy
		Referrer-Policy "strict-origin-when-cross-origin"
		
		# Permissions Policy - disable unnecessary features
		Permissions-Policy "accelerometer=(), camera=(self), geolocation=(self), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()"
		
		# HSTS - enforce HTTPS (1 year)
		Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
		
		# Content Security Policy - Updated for Clerk
		Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com https://js.clerk.dev https://*.clerk.accounts.dev; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https: blob:; connect-src 'self' https://api.clerk.dev https://*.clerk.accounts.dev https://clerk-telemetry.com https://www.google-analytics.com https://*.sentry.io wss://*.clerk.accounts.dev; frame-src 'self' https://accounts.clerk.dev https://*.clerk.accounts.dev; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; worker-src 'self' blob:"
		
		# Remove server identification
		-Server
	}

	# Gzip compression
	encode gzip

	# Cache static assets
	@static {
		path *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2
	}
	header @static Cache-Control "public, max-age=31536000, immutable"

	# No cache for HTML (SPA updates)
	@html {
		path *.html /
	}
	header @html Cache-Control "no-cache, no-store, must-revalidate"
}
